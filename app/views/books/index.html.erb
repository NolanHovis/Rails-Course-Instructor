<h1>Books List</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td>
          <%= link_to 'show', book_path(book) %>
        </td>
        <td>
          <%= link_to 'Delete', book_path(book), data: { method: :delete} %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>